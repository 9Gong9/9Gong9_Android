<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/groupMakerImg"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:scaleType="centerCrop"
        android:src="@drawable/person"></ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  방 개설자 : "
                android:textColor="@color/black"
                android:textSize="10dp"
                ></TextView>
            <TextView
                android:id="@+id/groupMakerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="g._naa02"
                android:textColor="@color/black"
                android:textSize="10dp"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  참여 인원 : "
                android:textColor="@color/black"
                android:textSize="10dp"
                ></TextView>
            <TextView
                android:id="@+id/currentPersonNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="10dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="10dp"
                ></TextView>
            <TextView
                android:id="@+id/totalPersonNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="10dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 명"
                android:textColor="@color/black"
                android:textSize="10dp"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  모집 기간 : "
                android:textColor="@color/black"
                android:textSize="10dp"
                ></TextView>
<!--            <TextView-->
<!--                android:id="@+id/GroupingStartPeriod"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="2022/07/18"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="10dp"-->
<!--                ></TextView>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ~ "
                android:textColor="@color/black"
                android:textSize="10dp"
                ></TextView>
            <TextView
                android:id="@+id/GroupingEndPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022/07/22"
                android:textColor="@color/black"
                android:textSize="10dp"
                ></TextView>
        </LinearLayout>

    </LinearLayout>
    <android.widget.Button
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="@drawable/btn_red"
        android:text="참여하기"
        android:layout_marginLeft="70dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="9dp"
        />
</LinearLayout>